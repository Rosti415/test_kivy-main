<HomeScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "25sp"
        MDLabel:
            id:weather_text
            text: "Погода"
            halign: "center"
            font_style: "H5"
        MDLabel:
            id: temp_text
            text: ""
            halign: "center"
            font_style: "H3"



        MDTextField:
            id:city
            hint_text: "Введіть місто"
            mode: 'fill'
            size_hint:(0.9,None)
            pos_hint: {'center_x': 0.5}     
        MDBottomAppBar:

            MDTopAppBar:
                title: "Weather"
                icon: "map-marker-outline"
                type: "bottom"
                left_action_items: [["menu", lambda x: x]]
                mode: 'end'
                on_action_button: root.city_request()