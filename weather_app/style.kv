<WeatherCard>:
    padding: 15
    size_hint: 0.8, 0.8
    MDBoxLayout:
        orientation:"vertical"
        MDLabel:
            id:weather_text
            text: "Weather"
            halign: "center"
            font_style: "H6"
        MDLabel:
            id: temp_text
            text: ""
            halign: "center"
            font_style: "H4"
        MDLabel:
            id: rain_pop_text
            text: ""
            halign:"left"
            font_style: "Subtitle2"
        MDLabel:
            id: rain_text
            text: ""
            halign:"left"
            font_style: "Subtitle2"
        MDLabel:
            id: wind_speed_text
            text: ""
            halign:"center"
            font_style: "Subtitle2"


<HomeScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "20sp"


        MDCarousel:
            id: weather_carousel
            direction: "right"
            padding: 10



        MDTextField:
            id: city
            hint_text: "Введіть місто"
            mode: 'fill'
            size_hint:(0.9,None)
            pos_hint: {'center_x': 0.5}     
        MDBottomAppBar:

            MDTopAppBar:
                title: "Weather"
                icon: "map-marker-outline"
                type: "bottom"
                left_action_items: [["menu", lambda x: x]]
                mode: 'end'
                on_action_button: root.city_request()